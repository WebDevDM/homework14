      <a target="_new" href="https://github.com/WebDevDM?tab=repositories">Github</a>
    </div>
    <!-- Copyright -->
  
  </footer>
<script>
function myFunction() {
    var inpt = "";
    var dp = $("#appdate").val();
    var tp = $("#apptime").val();
    document.getElementById("d").innerHTML = dp + " " + tp;
    var inpt = document.getElementById("d").innerHTML
    document.getElementById("nodi").value = inpt;
};
</script>
</body>
</html>